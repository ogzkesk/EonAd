<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ad_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:contentDescription="@null"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ad_headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:maxLines="1"
                    android:textStyle="bold"
                    tools:text="Ad Headline....." />

                <TextView
                    android:id="@+id/ad_advertiser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/ad_color"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    tools:text="www.example.com.." />


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ad_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:adjustViewBounds="true"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/ad_call_to_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/call_to_action_bg"
            android:foreground="?android:attr/selectableItemBackground"
            android:minWidth="74dp"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="CALL" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/ad_color"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:text="@string/ad_top"
        android:textColor="@color/ad_white"
        android:textSize="12sp" />

</FrameLayout>